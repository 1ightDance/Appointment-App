<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lightdance.appointment.activities.LoginActivity">

    <ImageView
        android:id="@+id/loginbg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/ic_loginbg" />

    <ImageView
        android:id="@+id/loginbg2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="64dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="64dp"
        android:adjustViewBounds="false"
        android:background="@drawable/bg_login"
        android:cropToPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/loginbg"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="32dp"
        android:text="账号"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/loginbg2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/loginbg2"
        app:layout_constraintRight_toRightOf="@+id/loginbg2"
        app:layout_constraintTop_toBottomOf="@+id/imageView_user_avatar"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="24dp"
        android:text="密码"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_account"
        app:layout_constraintRight_toRightOf="@+id/tv_account"
        app:layout_constraintTop_toBottomOf="@+id/tv_account" />

    <EditText
        android:id="@+id/editext_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="学号/手机号/邮箱"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/tv_account"
        app:layout_constraintLeft_toRightOf="@+id/tv_account"
        app:layout_constraintRight_toRightOf="@+id/loginbg2"
        app:layout_constraintTop_toTopOf="@+id/tv_account"
        app:layout_constraintHorizontal_bias="1.0" />

    <EditText
        android:id="@+id/edittxt_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="请输入密码"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="@+id/tv_password"
        app:layout_constraintLeft_toRightOf="@+id/tv_password"
        app:layout_constraintTop_toTopOf="@+id/tv_password"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="@+id/loginbg2"
        app:layout_constraintHorizontal_bias="1.0" />

    <Button
        android:id="@+id/btn_sign_up"
        style="@android:style/Widget.Holo.Button.Small"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:elevation="0dp"
        android:text="注册"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/loginbg2"
        app:layout_constraintLeft_toLeftOf="@+id/loginbg2"
        app:layout_constraintRight_toRightOf="@+id/loginbg2"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/btn_sign_in"
        style="@android:style/Widget.Holo.Button.Small"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="登录"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_sign_up"
        app:layout_constraintLeft_toLeftOf="@+id/loginbg2"
        app:layout_constraintRight_toRightOf="@+id/loginbg2" />

    <ImageView
        android:id="@+id/imageView_user_avatar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="40dp"
        app:layout_constraintLeft_toLeftOf="@+id/loginbg2"
        app:layout_constraintRight_toRightOf="@+id/loginbg2"
        app:layout_constraintTop_toTopOf="@+id/loginbg2"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/tv_forgetpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="忘记密码？"
        android:textColor="@android:color/black"
        android:textSize="10sp"
        app:layout_constraintRight_toRightOf="@+id/edittxt_password"
        app:layout_constraintTop_toBottomOf="@+id/edittxt_password" />

</android.support.constraint.ConstraintLayout>
