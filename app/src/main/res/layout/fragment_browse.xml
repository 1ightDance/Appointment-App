<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    app:cardElevation="5dp"
    android:layout_margin="5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/message_appointment_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            tools:text="这里是标题" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">
            <TextView
                android:id="@+id/message_appointment_begintime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="10.5 19:30"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="--"/>
            <TextView
                android:id="@+id/message_appointment_endtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="10.5 22:30"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/message_appointment_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/message_appointment_title"
            tools:src="@mipmap/ic_launcher"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/message_appointment_type"
            android:layout_alignTop="@+id/message_appointment_type"
            android:minLines="3"
            tools:text="这里是一些关于该活动的描述性文字"
            />
        <ImageView
            android:id="@+id/message_appointment_inviterIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/message_appointment_type"
            android:scaleType="centerInside"
            tools:src="@drawable/me"/>
        <TextView
            android:id="@+id/message_appointment_inviter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/message_appointment_inviterIcon"
            android:layout_alignTop="@+id/message_appointment_inviterIcon"
            android:layout_marginLeft="5dp"
            tools:text="天舒"/>
        <TextView
            android:id="@+id/message_appointment_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/message_appointment_inviter"
            android:layout_alignTop="@id/message_appointment_inviter"
            android:layout_marginLeft="15dp"
            tools:text="图书馆电子阅览室"/>
        <TextView
            android:id="@+id/message_appointment_personnumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/message_appointment_place"
            android:layout_alignTop="@id/message_appointment_place"
            android:layout_marginLeft="15dp"
            tools:text="3人"/>
        <TextView
            android:id="@+id/message_appointment_publishtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/message_appointment_type"
            android:layout_alignParentRight="true"
            tools:text="2017.9.30"/>


</RelativeLayout>
    </android.support.v7.widget.CardView>
